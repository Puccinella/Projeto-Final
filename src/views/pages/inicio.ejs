
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    
    <style>
        #trocacor {
          display: none;
        }

        *{
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }
        main{
          display: flex;
          flex: 2;
        }
        header, footer{
          flex: 1;
        }

    </style>
    
    <link rel="stylesheet" href="../../public/style.css">
</head>
<body>
  
    <input type="checkbox" name="trocacor" id="trocacor" >

    <header>
        <%- include("../partials/header") %>
    </header>

    <main>
        <div class="container">
        
          <div class="container mt-4">
              <h3>Filtrar por categoria</h3>

              <div class="d-flex flex-wrap gap-2 mt-2">
                  <a href="/categoria/Ação" class="btn btn-outline-primary">Ação</a>
                  <a href="/categoria/Aventura" class="btn btn-outline-primary">Aventura</a>
                  <a href="/categoria/Sobrevivência" class="btn btn-outline-primary">Sobrevivência</a>
                  <a href="/categoria/RPG" class="btn btn-outline-primary">RPG</a>
                  <a href="/categoria/Terror" class="btn btn-outline-primary">Terror</a>
                  <a href="/categoria/Indie" class="btn btn-outline-primary">Indie</a>
                  <a href="/categoria/Plataforma" class="btn btn-outline-primary">Plataforma</a>
                  <a href="/categoria/Simulador" class="btn btn-outline-primary">Simulador</a>
                  <a href="/" class="btn btn-secondary">Mostrar Todos</a>
              </div>
          </div>    

          <div class="container mt-5">
            <div class="row g-4">
              <% jogos.forEach(jogo => { %>
                <div class="col-md-3 d-flex">
                  <div class="card shadow-sm flex-fill">

                  
                    <img src="<%= jogo.imagemURL %>" class="card-img-top img-fluid rounded" alt="<%= jogo.titulo %>" style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                      
                      <h5 class="card-title"><%= jogo.titulo %></h5>

                      
                      <p class="card-text fw-bold text-success" >
                        R$ <%= jogo.preco %>
                      </p>

                      
                      <p class="card-text" style="font-size: 0.9rem;">
                        <%= jogo.descricao.substring(0, 100) %>...
                      </p>

                      
                      <form action="/carrinho" method="POST">
                        <input type="hidden" name="idJogo" value="<%= jogo.id %>">
                        <input type="hidden" name="PrecoJogo" value="<%= jogo.preco %>">
                        <button class="btn btn-primary w-100">Adicionar ao Carrinho</button>
                      </form>

                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>

          
        </div>
        
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js" integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y" crossorigin="anonymous"></script>
    </main>
    </body>

    <footer>
      <%- include("../partials/footer") %>
    </footer>

</html>

