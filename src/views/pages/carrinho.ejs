<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Carrinho</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .card-img-top {
            height: 180px;
            object-fit: cover;
        }
    </style>
</head>

<body>

<header>
    <%- include("../partials/header") %>
</header>

<main class="container mt-5">

    <h2 class="mb-4">Seu Carrinho</h2>

    <% if (itens.length === 0) { %>

        <div class="alert alert-warning text-center">
            Seu carrinho est√° vazio 
        </div>

    <% } else { %>

        <div class="row g-4">

            <% itens.forEach(item => { %>

                <div class="col-md-4 d-flex">

                    <div class="card shadow-sm flex-fill">

                        <img src="<%= item.Jogo.imagemURL %>" 
                             alt="<%= item.Jogo.titulo %>" 
                             class="card-img-top">

                        <div class="card-body">

                            <h5 class="card-title"><%= item.Jogo.titulo %></h5>

                            <p class="text-success fw-bold">
                                R$ <%= item.preco_unitario %>
                            </p>

                            <p class="text-muted" style="font-size: 0.9rem;">
                                <%= item.Jogo.descricao.substring(0, 90) %>...
                            </p>

                            <form action="/carrinho/remover/<%= item.id %>" method="POST">
                                <button class="btn btn-danger w-100">
                                    Remover
                                </button>
                            </form>

                        </div>
                    </div>
                </div>

            <% }) %>

        </div>

        <hr class="my-4">

        <div class="d-flex justify-content-between align-items-center">

            <h4>Total: 
                <span class="text-primary fw-bold">R$ <%= precoTotal %></span>
            </h4>

            <form action="/carrinho/pagar/<%= pedidoId %>" method="POST">
                <button class="btn btn-success btn-lg">
                    Finalizar Pagamento
                </button>
            </form>

        </div>

    <% } %>

</main>

<footer class="mt-5">
    <%- include("../partials/footer") %>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
