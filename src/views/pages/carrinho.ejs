<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Carrinho</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>

        #trocacor{
            display: none;
        }

        .card-img-top {
            height: 180px;
            object-fit: cover;
        }
    </style>
</head>

<body>

    <input type="checkbox" name="trocacor" id="trocacor" >

<header>
    <%- include("../partials/header") %>
</header>

<main class="container mt-5">

    <h2 class="mb-4">Seu Carrinho</h2>

    <% if (itens.length === 0) { %>

        <div class="alert alert-warning text-center">
            Seu carrinho está vazio 
        </div>

    <% } else { %>

        <div class="row g-4">

            <% itens.forEach(item => { %>

                <div class="col-md-4 d-flex">

                    <div class="card shadow-sm flex-fill">

                        <img src="<%= item.Jogo.imagemURL %>" alt="<%= item.Jogo.titulo %>" class="card-img-top">

                        <div class="card-body">

                            <h5 class="card-title"><%= item.Jogo.titulo %></h5>

                            <p class="text-success fw-bold">
                                R$ <%= item.preco_unitario %>
                            </p>

                            <p class="text-muted" style="font-size: 0.9rem;">
                                <%= item.Jogo.descricao.substring(0, 100) %>...
                            </p>

                            <form action="/carrinho/remover/<%= item.id %>" method="POST">
                                <button class="btn btn-danger w-100">
                                    Remover
                                </button>
                            </form>

                        </div>
                    </div>
                </div>

            <% }) %>

        </div>

        <hr class="my-4">

        <div class="d-flex justify-content-between align-items-center">

            <h4>Total: 
                <span class="text-primary fw-bold">R$ <%= precoTotal %></span>
            </h4>

            <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Finalizar Pagamento
            </button>

            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

                <div class="modal-dialog modal-dialog-centered modal-lg">

                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Finalizar Compra</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body d-flex flex-column justify-content-center align-items-center">

                            <h1>Deseja finalizar sua compra?</h1>

                            <div class="row">

                                <div class="col-6">
                                    <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">
                                        NÃO
                                    </button>
                                </div>
                                <div class="col-6">
                                    <form action="/carrinho/pagar/<%= pedidoId %>" method="POST">
                                        <button type="submit" class="btn btn-primary">
                                            SIM
                                        </button> 
                                    </form>
                                </div>

                            </div>

                        </div>

                    </div>
                    
                </div>

            </div>

        </div>

    <% } %>

</main>

<footer class="mt-5">
    <%- include("../partials/footer") %>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
